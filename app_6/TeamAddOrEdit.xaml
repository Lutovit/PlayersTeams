<Window x:Class="app_6_1.TeamAddOrEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_6_1"
        mc:Ignorable="d" Height="300" Width="400" Title="TeamAddOrEdit">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Apply_Button" Content="Apply" Margin="10,5" Grid.Row="2" Click="Apply_Button_Click"/>
        <Button x:Name="Close_Button" Content="Close" Grid.Column="1" Margin="10,5" Grid.Row="2" Click="Close_Button_Click"/>
        <Label x:Name="Team_Name_lable" Content="Team Name" Margin="10"/>
        <Label x:Name="Coach_Name_lable" Content="Coach Name" Margin="10" Grid.Row="1"/>
        <TextBox x:Name="TeamNameTextBox" Grid.Column="1" Margin="10" TextWrapping="Wrap"/>
        <TextBox x:Name="CoachNameTextBox" Grid.Column="1" Margin="10" Grid.Row="1" TextWrapping="Wrap"/>
    </Grid>
</Window>
